<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/baseColor"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_alertIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mediumMargin"
            android:src="@drawable/icon_back"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mediumPadding"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/txt_alertTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/mediumPadding"
            android:text="Enter Code"
            android:textColor="@color/white"
            android:textSize="@dimen/topBarTextSize"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/titleBottomBar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/mediumPadding"
            android:text="Enter you Library code"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/smallPadding"
            android:visibility="visible">

           <EditText
                android:id="@+id/edt_safeCode1"
                android:layout_width="@dimen/edtCodeWidth"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallMargin"
                android:background="@drawable/code_edt_bg"
                android:gravity="center"
                android:hint="*"
                android:inputType="number"
               android:maxLength="1"
                android:padding="@dimen/mediumPadding"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="25sp"/>
            <EditText
                android:id="@+id/edt_safeCode2"
                android:layout_width="@dimen/edtCodeWidth"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallMargin"
                android:background="@drawable/code_edt_bg"
                android:gravity="center"
                android:hint="*"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/mediumPadding"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="25sp"/>
            <EditText
                android:id="@+id/edt_safeCode3"
                android:layout_width="@dimen/edtCodeWidth"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallMargin"
                android:background="@drawable/code_edt_bg"
                android:gravity="center"
                android:hint="*"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/mediumPadding"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="25sp"/>
            <EditText
                android:id="@+id/edt_safeCode4"
                android:layout_width="@dimen/edtCodeWidth"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallMargin"
                android:background="@drawable/code_edt_bg"
                android:gravity="center"
                android:hint="*"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/mediumPadding"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="25sp"/>
            </LinearLayout>
           <LinearLayout
               android:id="@+id/lin_loading"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
              android:background="#AAFFFFFF"
               android:gravity="center"
               android:orientation="vertical"
               android:visibility="gone">
               <ProgressBar
                   android:id="@+id/progressBar1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:id="@+id/txt_plsWait"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/loading_authentication"
                   android:textColor="@color/black"
                   android:textStyle="bold|italic"/>

               </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_enterCorrectCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/mediumPadding"
            android:text="@string/enterCorrectCode"
            android:textColor="@color/regret"
            android:textSize="14sp"
            android:visibility="invisible"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/baseColor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_alertOk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/alert_button_selector"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="@dimen/mediumPadding"
                android:text="OK"
                android:textColor="@color/black"
                android:textSize="@dimen/alertBtnTextSize"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/baseColor"/>
            <TextView
                android:id="@+id/txt_alertCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/alert_button_selector"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:padding="@dimen/mediumPadding"
                android:text="Cancel"
                android:textColor="@color/black"
                android:textSize="@dimen/alertBtnTextSize"
                android:visibility="visible"/>
        </LinearLayout>
        </LinearLayout>


    </LinearLayout>