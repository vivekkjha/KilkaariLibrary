<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/smallMargin"
        android:text="Sign In:"
        android:textColor="@color/black"
        android:textSize="@dimen/titleTextSize"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/smallMargin"
        android:background="@drawable/border_signup"
        android:orientation="vertical"
        android:padding="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/mediumPadding"
                android:paddingLeft="50dp"
                android:paddingRight="@dimen/mediumPadding"
                android:paddingTop="@dimen/mediumPadding"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_book_default"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/baseColor"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/mediumPadding"
                android:paddingLeft="50dp"
                android:paddingRight="@dimen/mediumPadding"
                android:paddingTop="@dimen/mediumPadding"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_book_default"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/smallMargin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/titleBottomBar"
            android:gravity="center"
            android:padding="@dimen/largePadding"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_signUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mediumMargin"
            android:layout_weight="1"
            android:background="@color/inQueue"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="@dimen/largePadding"
            android:text="Sign up"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/smallMargin"
        android:text="Or"
        android:textColor="@color/black"
        android:textSize="@dimen/titleTextSize"/>
    <LinearLayout
        android:id="@+id/lin_loginFacebook"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="@dimen/smallMargin"
        android:background="@color/facebookSignIn"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/mediumMargin"
            android:src="@drawable/icon_facebook"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sign in With Facebook"
            android:textColor="@color/white"
            android:textSize="22sp"/>
    </LinearLayout>

</LinearLayout>