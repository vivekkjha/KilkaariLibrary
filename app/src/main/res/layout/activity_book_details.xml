<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title_bar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/titleBottomBar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/smallPadding"
                android:paddingRight="@dimen/smallPadding"
                android:paddingTop="@dimen/smallPadding"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="@dimen/bookDetailsImageHeightWidth">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="60dp">
                        <View
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/txt_categoryNameDetails"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Category"/>
                        </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayBg"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:layout_height="0dp">

                        <View
                            android:layout_width="@dimen/leftMarginBookDetails"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/smallPadding"
                                style="@style/ratingBarLarge"
                                android:rating="5"
                                android:id="@+id/ratingBarDetails" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/smallPadding">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/donorDetailsTextSize"
                                    android:singleLine="true"
                                    android:text="@string/donatedBy"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/donorDetailsTextSize"
                                    android:singleLine="true"
                                    android:id="@+id/txt_donatedBy"
                                    android:text="@string/donatedBy"/>
                                </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/smallPadding"
                                android:orientation="horizontal"
                                android:paddingRight="@dimen/smallPadding">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/donorDetailsTextSize"
                                    android:singleLine="true"
                                    android:text="@string/addedOn"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txt_addedOn"
                                    android:textSize="@dimen/donorDetailsTextSize"
                                    android:singleLine="true"
                                    android:text="@string/addedOn"/>
                            </LinearLayout>
                            </LinearLayout>
                    </LinearLayout>


                    </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/bookDetailsImageHeightWidth"
                    android:layout_marginLeft="@dimen/largeMargin"
                    android:padding="2dp"
                    android:background="@color/baseColor"
                    android:layout_height="@dimen/bookDetailsImageHeightWidth">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_bookDetailsImage"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_book_default"
                        android:background="@color/white"/>
                    </LinearLayout>

                </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/smallPadding"
                android:paddingRight="@dimen/smallPadding"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/mediumPadding"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_bookNameDetails"
                        android:paddingTop="@dimen/smallPadding"
                        android:paddingBottom="@dimen/smallPadding"
                        android:textSize="@dimen/bookDetailsNameTextSize"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:text="fdfdf"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_authorNameDetails"
                        android:paddingTop="@dimen/smallPadding"
                        android:paddingBottom="@dimen/smallPadding"
                        android:singleLine="true"
                        android:text="fddfd"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_languageDetails"
                        android:paddingBottom="@dimen/smallPadding"
                        android:singleLine="true"
                        android:text="idsdsd"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_gravity="end">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/smallPadding"
                                android:id="@+id/img_toread"
                                android:clickable="true"
                                android:layout_marginRight="@dimen/smallMargin"
                                android:layout_marginLeft="@dimen/smallMargin"
                                android:src="@drawable/icon_toread"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/img_alreadyRead"
                                android:clickable="true"
                                android:padding="@dimen/smallPadding"
                                android:layout_marginRight="@dimen/smallMargin"
                                android:layout_marginLeft="@dimen/smallMargin"
                                android:src="@drawable/icon_already_read_inactive"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/img_requested"
                                android:clickable="true"
                                android:layout_marginRight="@dimen/smallMargin"
                                android:layout_marginLeft="@dimen/smallMargin"
                                android:padding="@dimen/smallPadding"
                                android:src="@drawable/icon_requested"/>
                        </LinearLayout>
                    </LinearLayout>
                    </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grayBg"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/smallPadding"
                android:paddingRight="@dimen/smallPadding"
                android:paddingTop="@dimen/mediumPadding"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edtAddBooksHeight"
                    android:text="Details"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/addBookHeadTextSize"
                    android:background="@color/white"
                    android:padding="@dimen/smallPadding"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/baseColor"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/donorDetailsTextSize"
                            android:padding="@dimen/smallPadding"
                            android:text="PUBLISHER"/>

                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/smallPadding"
                            android:textSize="@dimen/donorDetailsTextSize"
                            android:text="PUBLISHING YEAR"/>

                    </LinearLayout>



                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_publisherDetails"
                            android:paddingLeft="@dimen/smallPadding"
                            android:paddingRight="@dimen/smallPadding"
                            android:paddingBottom="@dimen/smallPadding"
                            android:textColor="@color/black"
                            android:text="Westland"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_publishingYear"
                            android:paddingLeft="@dimen/smallPadding"
                            android:paddingRight="@dimen/smallPadding"
                            android:paddingBottom="@dimen/smallPadding"
                            android:textColor="@color/black"
                            android:text="2009"/>

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/donorDetailsTextSize"
                            android:padding="@dimen/smallPadding"
                            android:text="PAGE COUNT"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/smallPadding"
                            android:textSize="@dimen/donorDetailsTextSize"
                            android:text="ISBN"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_pageCountDetails"
                            android:paddingLeft="@dimen/smallPadding"
                            android:paddingRight="@dimen/smallPadding"
                            android:paddingBottom="@dimen/smallPadding"
                            android:textColor="@color/black"
                            android:text="219"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_isbnDetails"
                            android:paddingLeft="@dimen/smallPadding"
                            android:paddingRight="@dimen/smallPadding"
                            android:paddingBottom="@dimen/smallPadding"
                            android:textColor="@color/black"
                            android:text="18245896524545"/>

                    </LinearLayout>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grayBg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/smallPadding"
                android:paddingRight="@dimen/smallPadding"
                android:paddingBottom="@dimen/smallPadding"
                android:paddingTop="@dimen/mediumPadding"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edtAddBooksHeight"
                    android:text="Description"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/addBookHeadTextSize"
                    android:background="@color/white"
                    android:padding="@dimen/smallPadding"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/baseColor"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_descriptionDetails"
                        android:background="@color/white"
                        android:gravity="left|top"
                        android:padding="@dimen/mediumPadding"
                        android:textColor="@color/black"
                        android:text="loren ispum loren ipsum loren ipsum loren ipsum ipsum loren ipsum loren ipsum ipsum loren ipsum loren ipsum "

                        />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grayBg"/>
            </LinearLayout>




        </LinearLayout>
    </ScrollView>

</LinearLayout>