<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/baseColor"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_alertIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/mediumMargin"
            android:src="@drawable/icon_back"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mediumPadding"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/txt_alertTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/mediumPadding"
            android:text="Gallery"
            android:textColor="@color/white"
            android:textSize="@dimen/topBarTextSize"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/titleBottomBar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_alertText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/largeMargin"
            android:gravity="center"
            android:text="loren ipsum loren ipsum loren ipsum loren ipsum loren ipsum loren ipsum loren ipsum loren ipsum loren ipsum loren ipsum "
            android:textColor="@color/black"
            android:textSize="@dimen/alertTextSize"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/baseColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_alertOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/alert_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="@dimen/mediumPadding"
            android:text="OK"
            android:textColor="@color/black"
            android:textSize="@dimen/alertBtnTextSize"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/baseColor"/>
        <TextView
            android:id="@+id/txt_alertCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/alert_button_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="@dimen/mediumPadding"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/alertBtnTextSize"
            android:visibility="visible"/>
    </LinearLayout>

</LinearLayout>