<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_bar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/titleBottomBar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:id="@+id/listView_issue"
            android:cacheColorHint="@color/white"
            android:divider="@color/lightGrayBg"
            android:dividerHeight="1dp"
            android:layout_marginBottom="@dimen/addOfflineRequestHeight"
            />
        <include layout="@layout/layout_loading"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/addOfflineRequestHeight"
            android:layout_alignParentBottom="true"
            android:background="@color/baseColor"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/mediumPadding"
                android:textColor="@color/white"
                android:text="@string/addOfflineRequest"/>
            </LinearLayout>
    </RelativeLayout>


</LinearLayout>